{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
    'ws',
  ]
%}
<section{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header %}
    <header class="sect-header">
      {{ header }}
    </header>
  {% endif %}

  {{ exposed }}
  {{ attachment_before }}

  {% if rows -%}
    {{ rows }}
  {% elseif empty -%}
    {{ empty }}
  {% endif %}

  {% if more or pager %}
    <div class="btn-toolbar pager more" role="toolbar" aria-label="Paginación y Más">
      {{ pager }}
      {{ more }}
    </div>
    {% endif %}

  {% if footer %}
    <div class="flex-container comic-stores-add">
        {{ footer }}
    </div>
  {% endif %}
  {{ feed_icons }}
</section>
