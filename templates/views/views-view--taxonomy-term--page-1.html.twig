{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header %}
    <header class="sect-header">
      {{ header }}
    </header>
  {% endif %}

  {{ exposed }}
  {{ attachment_before }}

  {% if rows -%}
    {{ rows }}
  {% elseif empty -%}
  <section class="ws">
    <div class="blog-list">
    <article>
      <header class="sect-header"><div class="h3">No hay contenidos marcados con esta etiqueta.</div></header>
      <figure>
        <img data-src="/themes/newouroboros/assets/img/etiqueta-sin-contenido.jpg" alt="Etiqueta sin Contenido" title="Etiqueta sin Contenido" class="lazyload" />
      </figure>
    </article>
    </div>

  </section>
  {% endif %}

  {{ attachment_after }}

  {% if more or pager %}
    <div class="btn-toolbar pager more" role="toolbar" aria-label="Paginación y Más">
      {{ pager }}
      {{ more }}
    </div>
    {% endif %}
  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}
  {{ feed_icons }}
</div>
